sshs () {
	screen -RR $1 ssh $1
}

# find an executable file (or symlinked executable file) in the PATH
pathfind () {
    for i in "${(s/:/)PATH}"; do
        find -L $i -maxdepth 1 -type f -executable -name "$@" 2>/dev/null ;
    done
}

# progress bar, and generally better in every way
alias cp="rsync -avz"

# make which also look at aliases
alias which='alias | /usr/bin/env which --tty-only --read-alias --show-dot --show-tilde'

# fancy formatted git log
alias gitlog="git log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all | cat"

# kill a background job
alias killbg='kill ${${(v)jobstates#*:*:}%=*}'
function killjob()
{
    emulate -L zsh
    for jobnum in $@ ; do
        kill ${${jobstates[$jobnum]#*:*:}%=*}
    done
}

