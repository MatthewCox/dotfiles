alias cls='clear'

alias la='ls -la'
alias lh='ls -ld .??*'
alias lt='ls -latr'
alias lr='ls -lat'

alias ez='nano $REALHOME/.zshrc'
alias eza='nano $REALHOME/.zsh_aliases'
alias ezau='nano $REALHOME/.zsh_aliases_ut'
alias eze='nano $REALHOME/.zshenv'
alias sz='source $REALHOME/.zshenv ; source $REALHOME/.zshrc'

alias unexport='unset'

sshs () {
        screen -RR $1 ssh $1
}

alias sl='screen -ls'
alias sls='screen -ls'
alias sr='screen -r'
alias swipe='screen -wipe'

alias gitlog="git log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all | cat"

alias killbg='kill ${${(v)jobstates#*:*:}%=*}'
function killjob()
{
    emulate -L zsh
    for jobnum in $@ ; do
        kill ${${jobstates[$jobnum]#*:*:}%=*}
    done
}

alias update_dotfiles='pushd $REALHOME/.dotfiles > /dev/null 2>&1 ; git pull ; ./install ; echo "" ; sz ; popd > /dev/null 2>&1'
alias u.='update_dotfiles'

export TODOTXT_DEFAULT_ACTION=ls
export TODOTXT_SORT_COMMAND='env LC_COLLATE=C sort -k 2,2 -k 1,1n'
alias t='todo.sh -d $DOTFILES/ignored/todo.cfg'

if [[ `uname -o` == Cygwin ]]; then
	alias cyg-ports='cyg-apt --no-verify --mirror="ftp://ftp.cygwinports.org/pub/cygwinports/"'
fi

source $REALHOME/.zsh_aliases_ut
